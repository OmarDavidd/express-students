<div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto mt-10">
	<h2 class="text-2xl font-bold text-gray-800 mb-6">Editar Estudiante</h2>
	<form action="<%= student ? `/students/${student.id}?_method=PUT` : '/students' %>" method="POST" class="space-y-4">
		<div>
			<label for="nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
			<input type="text" id="nombre" name="nombre" value="<%= student ? student.nombre : ''%>" required
				class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
		</div>

		<div>
			<label for="apellido" class="block text-sm font-medium text-gray-700 mb-1">Apellido</label>
			<input type="text" id="apellido" name="apellido" value="<%= student ? student.apellido : '' %>" required
				class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
		</div>

		<div>
			<label for="matricula" class="block text-sm font-medium text-gray-700 mb-1">Matrícula</label>
			<input type="text" id="matricula" name="matricula" value="<%= student ? student.matricula : ''%>" required
				class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
		</div>

		<div>
			<label for="promedio" class="block text-sm font-medium text-gray-700 mb-1">Promedio</label>
			<input type="number" step="0.1" min="0" max="10" id="promedio" name="promedio"
				value="<%= student ? student.promedio : ''%>" required
				class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
		</div>

		<div>
			<div class="mb-4">
				<label class="block text-sm font-medium text-gray-700 mb-2">Cursos</label>
				<div class="space-y-2">
					<% const cursosDisponibles=['Matemáticas', 'Programación' , 'Historia' , 'Inglés' , 'Ciencias' ]; %>
						<% cursosDisponibles.forEach(curso=> { %>
							<div class="flex items-center">
								<input id="curso-<%= curso.toLowerCase() %>" name="cursos" type="checkbox" value="<%= curso %>"
									class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
								<label for="curso" class="ml-2 text-sm text-gray-700">
									<%= curso %>
								</label>
							</div>
							<% }); %>
				</div>
			</div>
		</div>

		<div class="flex space-x-4 pt-4">
			<button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
				Confirmar
			</button>
			<a href="/students"
				class="px-6 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors">
				Cancelar
			</a>
		</div>
	</form>
</div>